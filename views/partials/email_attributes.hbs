<p>Your email</p>
<p>{{emailContent}}</p>
<form id="attribute-details" name="whatever1">
<table id="email-attribute-table">
    <tr>
        <th>email</th>
        {{#each emailAttributes}}
            <th>{{this}}</th>
        {{/each}}
    </tr>
    </tr>
    {{#each emailAddresses}}
        <tr>
            <td>
                <input type="text" name="recipientEmails" value="{{this}}" />
            </td>
            {{#each ../emailAttributes}}
                <td><input type="text" name="{{this}}" placeholder="{{this}}" /></td>
            {{/each}}
            <td class="add email-row-button"> + </td>
            <td class="remove email-row-button"> - </td>
        </tr>
    {{/each}}
</table>
<button id="submit-attributes">Continue</button><span id="empty-attributes" style="display : none;">Looks like you've missed out some fields, is that okay?</span>
</form>